{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p dist/apps/backend && cp -r apps/backend/src/*.ts dist/apps/backend/"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node apps/backend/src/index.ts"
      }
    }
  }
}
